{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationDir": "./types",
    "inlineSourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": false
  },
  "exclude": [
    "test"
  ]
}
